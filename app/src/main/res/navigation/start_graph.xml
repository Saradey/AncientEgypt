<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/start_graph"
    app:startDestination="@id/splash">

    <include app:graph="@navigation/main_graph" />

    <fragment
        android:id="@+id/splash"
        android:name="com.evgenii.goncharov.ancient.egypt.features.splash.SplashFragment">
        <action
            android:id="@+id/action_splash_to_main"
            app:destination="@id/main_graph" />
        <action
            android:id="@+id/action_splash_to_onboarding"
            app:destination="@id/onbaording" />
    </fragment>

    <fragment
        android:id="@+id/onbaording"
        android:name="com.evgenii.goncharov.ancient.egypt.features.splash.OnboardingFragment">
        <action
            android:id="@+id/action_onbaording_to_main"
            app:destination="@id/main_graph" />
    </fragment>
</navigation>