<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Text" />

    <style name="Text.MainTextColor">
        <item name="android:textColor">?main_text_color</item>
    </style>

    <style name="Text.AccentTextColor">
        <item name="android:textColor">?accent_text_color</item>
    </style>

    <style name="Text.ActiveTextColorAccentBackground">
        <item name="android:textColor">?active_text_color</item>
    </style>

    <style name="Text.MainTextColor.CormorantSemibold">
        <item name="fontFamily">@font/cormorant_semibold</item>
    </style>

    <style name="Text.AccentTextColor.CormorantSemibold">
        <item name="fontFamily">@font/cormorant_semibold</item>
    </style>

    <style name="Text.MainTextColor.RalewayMedium">
        <item name="fontFamily">@font/raleway_medium</item>
    </style>

    <style name="Text.ActiveTextColorAccentBackground.RalewayMedium">
        <item name="fontFamily">@font/raleway_medium</item>
    </style>

    <style name="Text.ActiveTextColorAccentBackground.RalewayMedium.16">
        <item name="android:textSize">@dimen/sp_16</item>
    </style>

    <style name="Text.MainTextColor.CormorantSemibold.18">
        <item name="android:textSize">@dimen/sp_18</item>
    </style>

    <style name="Text.MainTextColor.RalewayMedium.16">
        <item name="android:textSize">@dimen/sp_16</item>
    </style>

    <style name="Text.MainTextColor.RalewayMedium.16.OnboardingDescriptionText">
        <item name="android:letterSpacing">0.1</item>
        <item name="lineSpacing">@dimen/dp_4</item>
    </style>

    <style name="Text.AccentTextColor.CormorantSemibold.26">
        <item name="android:textSize">@dimen/sp_26</item>
    </style>

    <style name="BottomNavigationAncientEgypt">
        <item name="android:background">@drawable/background_bottom_navigation</item>
        <item name="android:layout_height">@dimen/dp_70</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="itemTextAppearanceActive">
            @style/Text.ActiveTextColorAccentBackground.RalewayMedium.16
        </item>
        <item name="itemTextAppearanceInactive">
            @style/Text.MainTextColor.RalewayMedium.16
        </item>
        <item name="itemIconSize">@dimen/dp_28</item>
        <item name="labelVisibilityMode">labeled</item>
    </style>

</resources>